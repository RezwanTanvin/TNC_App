<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TrackCommute.captureOdometerS3">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:gravity="center"
        android:text="Enter the following information"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title3" />

    <TextView
        android:id="@+id/title3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Track Commute"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/mileageAtStarteditText"
        android:layout_width="274dp"
        android:layout_height="48dp"
        android:layout_marginTop="75dp"
        android:ems="10"
        android:hint="Mileage at Start"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="@+id/textView4"
        app:layout_constraintStart_toStartOf="@+id/textView4"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <Button
        android:id="@+id/takepictuerofOdotmeterBtn"
        android:layout_width="217dp"
        android:layout_height="74dp"
        android:layout_marginTop="24dp"
        android:text="Take picture of Odometer"
        app:layout_constraintEnd_toEndOf="@+id/mileageAtStarteditText"
        app:layout_constraintStart_toStartOf="@+id/mileageAtStarteditText"
        app:layout_constraintTop_toBottomOf="@+id/mileageAtStarteditText" />

    <Button
        android:id="@+id/submitBtn1"
        android:layout_width="0dp"
        android:layout_height="83dp"
        android:layout_marginTop="104dp"
        android:onClick="goToS2"
        android:text="Submit"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintEnd_toEndOf="@+id/textView4"
        app:layout_constraintStart_toStartOf="@+id/textView4"
        app:layout_constraintTop_toBottomOf="@+id/takepictuerofOdotmeterBtn" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="166dp"
        android:layout_height="166dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:rotation="90"
        app:layout_constraintBottom_toTopOf="@+id/submitBtn1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mileageAtStarteditText"
        app:srcCompat="@drawable/roundedcorner" />

</androidx.constraintlayout.widget.ConstraintLayout>