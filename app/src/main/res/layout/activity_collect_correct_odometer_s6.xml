<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ellerlabs.tncapp.TrackCommute.S6_collectCorrectOdometer">

    <TextView
        android:id="@+id/title7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Track Commute"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:gravity="center"
        android:text="Enter correct odometer reading"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintEnd_toEndOf="@+id/title7"
        app:layout_constraintStart_toStartOf="@+id/title7"
        app:layout_constraintTop_toBottomOf="@+id/title7" />

    <Button
        android:id="@+id/submitBtn"
        android:layout_width="257dp"
        android:layout_height="83dp"
        android:layout_marginTop="88dp"
        android:onClick="goToMainScreen"
        android:text="Submit Info"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintEnd_toEndOf="@+id/takepictuerofOdotmeterBtn2"
        app:layout_constraintStart_toStartOf="@+id/takepictuerofOdotmeterBtn2"
        app:layout_constraintTop_toBottomOf="@+id/takepictuerofOdotmeterBtn2"
        app:toggleCheckedStateOnClick="true" />

    <Button
        android:id="@+id/takepictuerofOdotmeterBtn2"
        android:layout_width="217dp"
        android:layout_height="74dp"
        android:layout_marginTop="24dp"
        android:text="Take picture of Odometer"
        app:layout_constraintEnd_toEndOf="@+id/mileageAtStarteditText2"
        app:layout_constraintStart_toStartOf="@+id/mileageAtStarteditText2"
        app:layout_constraintTop_toBottomOf="@+id/mileageAtStarteditText2" />

    <EditText
        android:id="@+id/mileageAtStarteditText2"
        android:layout_width="274dp"
        android:layout_height="48dp"
        android:layout_marginTop="100dp"
        android:ems="10"
        android:hint="Odometer Reading"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="@+id/textView14"
        app:layout_constraintStart_toStartOf="@+id/textView14"
        app:layout_constraintTop_toBottomOf="@+id/textView14" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="166dp"
        android:layout_height="166dp"
        android:rotation="90"
        app:layout_constraintBottom_toTopOf="@+id/submitBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mileageAtStarteditText2"
        app:srcCompat="@drawable/roundedcorner" />
</androidx.constraintlayout.widget.ConstraintLayout>